{
    "manifest_version": 3,
    "name": "OnSpotIfy",
    "version": "1.0",
    "description": "Simple Spotify Web Player controller",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://open.spotify.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "assets/icon.png",
        "32": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    }
}